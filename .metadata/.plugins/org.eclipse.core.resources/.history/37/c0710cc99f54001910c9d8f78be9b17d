package bits;

public class Test {

	static int setKthBit(int n, int k) {
		// kth bit of n is being set by this operation
		return ((1 << k) | n);
	}

	// Driver code
	public static void main(String arg[]) {
		int n = 10, k = 2;
		System.out.println("Kth bit set number = " + setKthBit(n, k));
		int a = 0|10;
		System.out.println(a);
	}
}
